<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popup_menu_location_def_rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000" >

    <RelativeLayout
        android:id="@+id/popup_menu_location_def_content_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" >

        <ListView
            android:id="@+id/popup_menu_location_def_listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:cacheColorHint="@color/transparent"
            android:divider="@drawable/listview_splitor"
            android:dividerHeight="2dp"
            android:fadingEdge="none"
            android:listSelector="#00000000"
            android:scrollbars="none" >
        </ListView>

        <View
            android:id="@+id/popup_menu_location_def_top_line_iv"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_above="@id/popup_menu_location_def_listview"
            android:background="#cb553b" />
    </RelativeLayout>

</RelativeLayout>
